<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
      <td><%= link_to 'Rename', edit_category_path(category), class: "btn" %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
      <td><%= link_to 'Show', category, class: "btn" %></td>
  </tr>
<% end %>
</table>

