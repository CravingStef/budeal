<div class="row">
	<div class="span6 offset3">
		<div class="well well-large">	
			<%= image_tag @pin.image %>
			<p class="description">
			  <%= @pin.description %> - 
			 </p>
			 <p>
			 	Proposed by <%= link_to @pin.user.name, @pin.user %> 
			  for <%= @pin.price %> Euros
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin), class: "btn" %>
			<% end %>
			<%= link_to 'Back', pins_path, class: "btn" %>
		<div/>
	</div>
</div>