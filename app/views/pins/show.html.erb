<div class="row">
	<div class="span6 offset3">
		<div class="well well-large">	
			<%= image_tag @pin.image %>
			<p>
			  <%= @pin.description %> - 
			 </p>
			 <p>
			 	Vendu par <%= @pin.user.name %>
			  au prix de <%= @pin.price %> Euros
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin), class: "btn" %>
			<% end %>
			<%= link_to 'Back', pins_path, class: "btn" %>
		<div/>
	</div>
</div>