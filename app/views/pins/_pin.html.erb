<div class="box">
	<%= link_to image_tag(pin.image(:medium)), pin %>
	<p class="description">
		<%= pin.description %>
	</p>
	<p>
		<strong>
			Proposed by <%= link_to pin.user.name, pin.user %> for <%= pin.price %> Euros 
			</br>
			<%= link_to pin.category.name, pin.category %>
		</strong>
	</p>
	  <% if current_user == pin.user %>
	  <div class="text-center">
		  <%= link_to 'Edit', edit_pin_path(pin), class: "btn" %>
			<%= link_to 'Delete', pin, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		<% end %>
</div>